generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name      String    @db.VarChar(100)
  createdAt DateTime? @default(now()) @map("created_at") @db.Timestamp(6)

  wallets   Wallet[]

  @@map("users")
}

model Wallet {
  id              String     @id(map: "accounts_pkey") @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId          String     @map("user_id") @db.Uuid
  name            String     @db.VarChar(100) // en el front lo llamas "bank"
  type            WalletType
  interestRate    Decimal?   @map("annual_interest") @db.Decimal(5, 2)
  balance         Decimal?   @map("current_balance") @default(0) @db.Decimal(15, 2)
  accruedInterest Decimal?   @map("total_interest_earned") @default(0) @db.Decimal(15, 2)

  transactions    Transaction[]
  user            User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("wallets")
}

enum WalletType {
  WALLET
  CREDIT_CARD
}

model Category {
  id           String        @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name         String        @db.VarChar(50)

  transactions Transaction[]

  @@map("categories")
}

enum TransactionDirection {
  IN
  OUT
}

model Transaction {
  id          String             @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  walletId    String?            @map("account_id") @db.Uuid
  categoryId  String?            @db.Uuid
  type        TransactionType
  name        String             @db.VarChar(100)
  direction   TransactionDirection? // opcional, Ãºtil para TRANSFER (IN/OUT)
  amount      Decimal            @db.Decimal(15, 2)
  date        DateTime           @db.Timestamp(6)
  transferId  String?            @db.Uuid
  createdAt   DateTime?          @map("created_at") @default(now()) @db.Timestamp(6)

  wallet      Wallet?            @relation(fields: [walletId], references: [id], onDelete: SetNull)
  category    Category?          @relation(fields: [categoryId], references: [id], onDelete: SetNull)

  @@map("transactions")
  @@index([walletId], map: "idx_transactions_account")
  @@index([date], map: "idx_transactions_date")
  @@index([type], map: "idx_transactions_type")
}

enum TransactionType {
  INCOME
  EXPENSE
  INTEREST
  TRANSFER
}
